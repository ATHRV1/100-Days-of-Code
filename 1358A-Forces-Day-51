#include <iostream>
using namespace std;

int main(int argc, char const *argv[])
{
    int t;
    cin >> t;
    while (t--)
    {

        int n, m;
        cin >> n >> m;
        if ((n*m)%2==0)
        {
            cout << ((m * n) / 2) << endl;
        }
        else
        {

            cout << ((m * n) / 2) + 1 << endl;
        }
    }

    return 0;
}
