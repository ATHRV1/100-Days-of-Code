#include <iostream>
using namespace std;

int main(int argc, char const *argv[])
{
    int t;
    cin >> t;
    while (t--)
    {
        int a, b;
        cin >> a >> b;
        int count = 2;
        int ans = 1;

        if (a <= 2)
        {
            cout << 1<<endl;
        }
        else
        {
            while (count < a)
            {
                count += b;
                ans++;
            }
            cout << ans << endl;
        }
    }

    return 0;
}
