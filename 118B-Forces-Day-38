#include <iostream>
using namespace std;

int main(int argc, char const *argv[])
{
    int n;
    cin>>n;

    for (int i = 0; i <=n; i++)
    {
        for (int j = 0; j < 2*(n-i); j++)
        {
            cout<<" ";
        }
        for (int j = 0; j < i; j++)
        {
            cout<<j;
            if (i==0)
            {
                continue;
            }
            cout<<" ";
            
        }
        for (int j = i; j >=0; j--)
        {
            cout<<j;
            if (j==0)
            {
                continue;
            }
            cout<<" ";
            
        }
        
        cout<<endl;
        
    }
    for (int i = n-1; i >= 0; i--)
    {
        for (int j = 0; j < 2*(n-i); j++)
        {
            cout<<" ";
        }
        for (int j = 0; j < i; j++)
        {
            cout<<j;
            if (i==0)
            {
                continue;
            }
            cout<<" ";
            
        }
        for (int j = i; j >=0; j--)
        {
            cout<<j;
            if (j==0)
            {
                continue;
            }
            cout<<" ";
        }
        cout<<endl;
    }
    
    
    return 0;
}
