#include <iostream>
#include<string>
using namespace std;

int main(int argc, char const *argv[])
{
    int n;
    cin>>n;
    string s;
    cin>>s;
    int p =0;
    int p1=0;

    cout<<s[0];

    for (int i = 1; i <n; i++)
    {
        // i=6
        p++; // p =2
        
        
        cout<<s[i];
        
        // p1+=p1+p; //p1=3
        i+=p;//5
        
    }
    
    return 0;
}


