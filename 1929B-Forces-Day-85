#include <iostream>
#include <cmath>
using namespace std;
using ll=long long;

int main(int argc, char const *argv[])
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    ll t;
    cin >> t;
    while (t--)
    {

        ll n, k;
        cin >> n >> k;

        if (k== 4*n-2)
        {
            cout << k/2 +1 << endl;
        }else{
            cout << (k+1)/2 << endl;
        }
        
        

        
    }

    return 0;
}
