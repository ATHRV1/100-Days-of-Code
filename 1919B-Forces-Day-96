#include <iostream>
#include <string>
using namespace std;

int main(int argc, char const *argv[])
{
    int t;
    cin >> t;
    while (t--)
    {

        int n, count = 0, count1 = 0;
        cin >> n;
        string str;
        cin >> str;
        for (int i = 0; i < str.size(); i++)
        {
            if (str[i] == '+')
            {
                count++;
            }
            else
            {
                count1++;
            }
        }
        cout << abs(count - count1) << endl;
    }

    return 0;
}
