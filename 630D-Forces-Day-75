#include <iostream>
using namespace std;

int main(int argc, char const *argv[])
{
    long long n, total = 0,sum;
    cin >> n;

    if (n%2==0)
    {
        sum=(n*(n/2))+n/2;
    }else{
        sum=(n*(n/2 + 1));
    }
    total=(sum*6);
    

    

    cout << total + 1 << endl;

    return 0;
}
