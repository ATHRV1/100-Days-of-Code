#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main(int argc, char const *argv[])
{
    int count =0;
    string s;
    getline(cin,s);
    for (int i = 0; i < s.size(); i++)
    {
        if (s[i]=='4' || s[i] == '7')
        {
            count++;
        }
        
    }
    if (count == 7 || count == 4)
    {
        cout<<"YES";
    }else{
        cout<<"NO";
    }
    
    return 0;
}
